<% node[:postgresql][:client_auth].each do |client| -%>
<%= client[:type] %> <%= client[:database] %> <%= client[:user] %> <%= client[:address] %> <%= client[:auth_method] %>
<% end -%>

# Allow postgres user on the local system to connect to any database
# using Unix-domain sockets as the postgres user name that ident reports
# for the connection
local all postgres              ident

# Allow any user on local system to connect to any database using
# Unix-domain sockets as the same user name that ident reports for the
# connection
local all all                   ident

# Allow all loopback connections to connect
host  all all      127.0.0.1/32 trust
host  all all      ::1/128      trust

# Reject all other connections
host  all all      0.0.0.0/0    reject
